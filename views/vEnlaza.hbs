
{{#section 'head'}}
    <script src="/js/vendor/handlebars-v4.1.2.js"></script>

{{/section}}




<!-- ENLAZA RECURSOS  -------------------->
<div class="title">
    <h3>{{recurso.tipo.padre}}/{{recurso.tipo.codigo}}</h3>
    <h4>{{recurso.nombre}}</h4>

</div>
<br>
<form action="/api/enlaza/{{recurso._id}}" method="POST">

    <div class="form-group">
        <select id="relaciones" name="relacion" class="form-control col-lg-6">

            {{#each relaciones}}

                {{#if @first}}
                    <option value="{{_id}}">{{nombre}}</option>
                {{else}}
                    <option value="{{_id}}">{{nombre}}</option>
                {{/if}}
            {{/each}}
        </select>
    </div>

    <div class="form-group">
    <select id="categorias" class="form-control col-lg-6">

        {{#with treeCategorias}}
            <option value="{{data._id}}">{{margen depth}}{{id}}</option>
            {{> listaOpciones}}
        {{/with}}
    </select>
    </div>

    <div class="form-group">
        <select id="recursos" name="recursos" size="20" class="form-control col-lg-6" multiple>

        </select>
    </div>

    <div class="form-group">
        <button type="submit" id="Aceptar" class="btn btn-primary">Grabar</button>
        <a id="cancelar" class="btn btn-secondary">Cancelar</a>
    </div>
</form>



<script type="text/javascript" src="/js/vendor/jquery-3.3.1.min.js"></script>
